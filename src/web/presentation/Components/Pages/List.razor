@page "/list/{ListUrl}"
@using application.Helper
@using presentation.Authentication
@inherits ListRazor

<ErrorComponent @ref="ErrorComponentRef">
    @if (List is null)
    {
        <h1>loading...</h1>
    }
    else
    {
        <div class="pb-2" style="height: 15rem">
            <ListDisplay @ref="ListDisplayRef" DisplayGoToListButton="false" List="List"/>
        </div>
        <AuthorizeView>
            <Authorized>
                @if (context.User.Claims.UserId().Equals(List.UserId))
                {
                    <div class="w-100">
                        <Modal @ref="AddEntryModalRef">
                            @if (ErrorMessage is not null)
                            {
                                <div class="alert alert-danger">
                                    @ErrorMessage
                                </div>
                            }
                            <div class="input-group w-100">
                                <ItemSearchComponent @ref="AddEntrySearchComponentRef"/>
                            </div>

                            <div class="input-group w-100 text-nowrap flex-nowrap pb-2">
                                <div class="input-group-text">
                                    Amount
                                </div>
                                <input class="form-control" type="number" @bind="AddEntryAmount"/>
                            </div>
                            <div class="input-group w-100 text-nowrap flex-nowrap">
                                <div class="input-group-text">
                                    Price for one
                                </div>
                                @if (List.Currency.Equals("USD"))
                                {
                                    <div class="input-group-text">
                                        $
                                    </div>
                                }
                                <input class="form-control" type="number" @bind="AddEntryPrice"/>
                                @if (List.Currency.Equals("EUR"))
                                {
                                    <div class="input-group-text">
                                        €
                                    </div>
                                }
                            </div>
                        </Modal>
                    </div>
                }
            </Authorized>
        </AuthorizeView>

        <table class="table table-dark table-striped w-100">
            <thead class="text-center">
            <tr>
                <th scope="col"></th>
                <th scope="col">Item</th>
                <th scope="col">Amount</th>
                <th scope="col">Avg buy price</th>
                <th scope="col">Total price</th>
                <th scope="col">
                    <button class="btn btn-outline-success w-100" @onclick="OpenModalBuyEntry">Add Buy entry</button>
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in List.Items.Where(item => item.CurrentAmountInvested > 0))
            {
                <tr class="pb-1 text-center align-middle">
                    <td class="col-1">
                        <img class="" src="@item.ItemImage" alt="" style="object-fit: contain; height: 3rem"/>
                    </td>
                    <td class="col-4">
                        <span>@item.ItemName</span>
                    </td>
                    <td class="col-1">
                        <span>@item.CurrentAmountInvested</span>
                    </td>
                    <td class="col-2">
                        <span>@CurrencyHelper.FormatCurrency(List.Currency, item.CurrentAverageBuyPrice)</span>
                    </td>
                    <td class="col-1">
                        <span>@CurrencyHelper.FormatCurrency(List.Currency, item.CurrentAmountInvested * item.CurrentAverageBuyPrice)</span>
                    </td>
                    <td class="col-3">
                        <button class="btn btn-outline-danger w-100" @onclick="() => OpenModalSellEntry(item)">Sell</button>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</ErrorComponent>